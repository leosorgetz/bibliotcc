{% extends 'admin.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}


{% block body %}
    <div class="box">
        <div class="box-body">
            <h1>Primeira Postagem do Projeto - {{ project }}</h1>

            {#{{ form_start(form) }}#}
            {{ form_start(form, {'attr': {'id': 'form_first_post'}}) }}
            {{ form_widget(form) }}
            <div class="form-group div-progress-bar">
                <label class="control-label">Carregando:</label>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                         aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 25%"></div>
                </div>
            </div>

            <ul class="list-inline">
                <li class="list-inline-item">
                    <button class="btn btn-success" type="submit">
                        <img class="spinner" src="{{ asset('assets/img/spinner.svg') }}" alt="Aguarde">
                        Editar
                    </button>
                </li>
                <li class="list-inline-item">
                    <a class="btn btn-secondary" href="{{ path('board_show', {id: project.board.id}) }}">Voltar</a>
                </li>
            </ul>
            {{ form_end(form) }}
            <br>

        </div>
    </div>
{% endblock %}
